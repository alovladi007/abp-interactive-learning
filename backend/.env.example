# ============================================================================
# MAX AI Research Assistant - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ============================================================================

# Application Settings
APP_NAME=MAX AI Research Assistant
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
DEBUG=True
WORKERS=4

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=max_db
POSTGRES_USER=max_user
POSTGRES_PASSWORD=your_secure_password_here

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Keys (Optional - for enhanced features)
# Semantic Scholar API (for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=

# OpenAI (for advanced synthesis)
OPENAI_API_KEY=

# Anthropic Claude (alternative for synthesis)
ANTHROPIC_API_KEY=

# Rate Limiting
SEMANTIC_SCHOLAR_RATE_LIMIT=100
ARXIV_RATE_LIMIT=50

# Caching
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings (adjust for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Feature Flags
ENABLE_NEO4J=True
ENABLE_ADVANCED_SYNTHESIS=False
ENABLE_RECOMMENDATIONS=True

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# Storage (for paper PDFs, exports, etc.)
STORAGE_TYPE=local  # or 's3'
STORAGE_PATH=/tmp/max_storage
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=False

# Security
SECRET_KEY=your_secret_key_for_jwt_and_encryption
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
