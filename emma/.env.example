# EMMA Configuration
NODE_ENV=development
PYTHON_ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=emma
POSTGRES_USER=emma
POSTGRES_PASSWORD=emma_password
DATABASE_URL=postgresql://emma:emma_password@postgres:5432/emma

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Neo4j Configuration
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_DATABASE=emma

# MinIO Configuration
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=emma-storage
MINIO_SECURE=false

# LLM Configuration
LLM_PROVIDER=openai  # openai, azure, local
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_VERSION=
LOCAL_LLM_ENDPOINT=http://localhost:8080

# Compute Bridge Configuration
WOLFRAM_MODE=cloud  # cloud, alpha, off
WOLFRAM_APP_ID=your-wolfram-app-id
WOLFRAM_CLOUD_KEY=your-wolfram-cloud-key
MATLAB_MODE=off  # engine, mps, off
MATLAB_ENGINE_PATH=/usr/local/MATLAB/R2023b
MATLAB_MPS_ENDPOINT=http://matlab-server:9910

# Tracing Configuration
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=emma

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,md,html,py,js,ts,cpp,java
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MEMORY_MB=512
SANDBOX_CPU_SHARES=512

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_CODE_EXECUTION=true
ENABLE_WOLFRAM=true
ENABLE_MATLAB=false
ENABLE_CITATIONS=true
ENABLE_TRACING=true